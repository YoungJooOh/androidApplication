<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/input_text_size"
    android:paddingLeft="@dimen/input_text_size"
    android:paddingRight="@dimen/input_text_size"
    android:paddingTop="@dimen/input_text_size"
    tools:context="com.kwanwoo.android.activityintent.SecondActivity">


    android:layout_height="495dp"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="143dp"
        app:srcCompat="@drawable/sample_1"
        android:layout_weight="0.32"
        android:id="@+id/imageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고기만두" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500원" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평점:4.2" />
    </LinearLayout>



</RelativeLayout>